<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div style="background-color:red" class=" navbar-fixed-top">
            <div class="container ">
                <div class="  align-items-center">
                    <div class="   h1 text-light" style="display:grid;justify-content:center;align-content:center">
                        <b>fitNfab</b>
                    </div>

                </div>

            </div>
        </div>

  


    <div class="container body-content">
        @RenderBody()
       
        <footer>
            <style>
                .footer {
                    padding-bottom: 3px;
                    position: fixed;
                    left: 0;
                    bottom: 0;
                    width: 180px;
                    color: crimson;
      
                    text-align: center;
                }
            </style>

            <div class="footer ">
                <p><h4>&copy;fitNfab Application</h4></p>
            </div>

        </footer>
    </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
