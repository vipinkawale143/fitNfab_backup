@model login.Models.LoginId

@{
    ViewBag.Title = "Login";
}
<style>
    body, html {
        background: url("../../NewFolder1/login2.jpg");
        background-size:100%;
        background-repeat: no-repeat;
    }

    .bg {
        /* The image used */
        height: 100%;
        /* Center and scale the image nicely */
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
    .f{
        color:white;
    }
</style>

