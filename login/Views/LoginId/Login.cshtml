<br>
<h2 class="f">Login</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group f">
            
            <label class = "control-label col-md-2" >User Name</label>
            <div class="col-md-10">
               
                <input type="text" class = "form-control " name="username" placeholder="email id..." >
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group f">
            
            <label class="control-label col-md-2">Password</label>
            <div class="col-md-10">
               
                <input type="text" class="form-control " name="pass" placeholder="password here...">
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </div>
    </div>
}
    
    <div>
        @Html.ActionLink("Client-SignUp ", "ClientRegistration", "Client") |
        @Html.ActionLink("Owner-SignUp ", "OwnerRegistration", "Owner")
      
    </div>
    

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
